{% extends "RedKiteCmsBundle:Block:Editor/_editor.html.twig" %}

{% block body %}
<form class="navbar-form al-navbar-list inline-list {{ data.alignment }}" method="{{ data.method }}" action="{{ data.action }}" enctype="{{ data.enctype }}" role="{{ data.role }}" {{ editor|raw }}>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="{{ data.placeholder }}">
    </div>
    <button type="submit" class="btn btn-default">{{ data.button_text }}</button>
</form>
{% endblock %}